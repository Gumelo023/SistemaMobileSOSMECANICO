<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tela_cadastro"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/logo"
        android:background="@drawable/logo3"
       android:layout_height="300dp"
        android:layout_width="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/title_cadastrese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_cadastro"
        android:textSize="40sp"
        android:textColor="@color/orange2"
        android:textStyle="bold"
        android:layout_marginTop="170dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBaseline_toBottomOf="@id/logo"/>

    <View
        android:id="@+id/container_cadastro"
        style="@style/ContainerComponents"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_cadastrese"/>

    <EditText
        android:id="@+id/edit_nomecad"
        style="@style/Edit_TextCad"
        android:hint="Nome"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/container_cadastro"
        app:layout_constraintStart_toStartOf="@id/container_cadastro"
        app:layout_constraintEnd_toEndOf="@id/container_cadastro" />

    <EditText
        android:id="@+id/edit_emailcad"
        style="@style/Edit_TextCad"
        android:hint="Email"
        android:drawableLeft="@drawable/baseline_person_24"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/edit_nomecad"
        app:layout_constraintStart_toStartOf="@id/container_cadastro"
        app:layout_constraintEnd_toEndOf="@id/container_cadastro" />

    <EditText
        android:id="@+id/edit_senhacad"
        style="@style/Edit_TextCad"
        android:hint="Senha"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:inputType="numberPassword"
        app:layout_constraintTop_toBottomOf="@id/edit_emailcad"
        app:layout_constraintStart_toStartOf="@id/container_cadastro"
        app:layout_constraintEnd_toEndOf="@id/container_cadastro"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_cad"
        style="@style/Button"
        android:text="Cadastrar"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/container_cadastro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>

