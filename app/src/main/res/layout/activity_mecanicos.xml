<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drewerLayout"
    tools:context=".MecanicosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"/>


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/retangulocatalogo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/retangulo_catalogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iconeretangulocaatalogo"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/voltarfigura"
            app:layout_constraintStart_toStartOf="@id/retangulocatalogo"
            app:layout_constraintTop_toTopOf="@id/retangulocatalogo" />

        <TextView
            android:id="@+id/textNomeRetangulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOS MECÃ‚NICO"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/retangulocatalogo"
            app:layout_constraintEnd_toEndOf="@+id/retangulocatalogo"
            app:layout_constraintStart_toStartOf="@+id/retangulocatalogo"
            app:layout_constraintTop_toTopOf="@id/retangulocatalogo" />

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="10.0sp"
            android:scrollbars="vertical"
            app:layout_constraintTop_toTopOf="@+id/retangulocatalogo"
            tools:listitem="@layout/activity_list_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start">

        <include
            layout="@layout/nav_drawer"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>